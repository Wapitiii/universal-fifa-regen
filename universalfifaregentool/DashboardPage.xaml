<Page x:Class="universalfifaregentool.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:universalfifaregentool"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <StackPanel>
        <ui:CardAction Icon="Folder24"  >
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,4"
                    FontWeight="Medium"
                    Text="Directory" />
                <TextBlock
                    Margin="0,0,0,4"
                    FontSize="11"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="Select your Game directory" />
                <ui:TextBox 
                    Name="gameDirectory"
                    Margin="0,0,0,8" />
                <ui:Button 
                     Content="Browse"
                     HorizontalAlignment="Right" Click="browseGameFolder"/>
            </StackPanel>
        </ui:CardAction>
